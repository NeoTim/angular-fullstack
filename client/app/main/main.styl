.thing-form
    margin 20px 0

#banner
    border-bottom none
    margin-top -20px

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center

 .btn.btn-clear
     background none
     border none

.item-input
    padding 0px
    
.item-input .input-group-btn
    border-left-width 1px
    border-left-style solid
    border-left-color #E5E5E5
    color: #E5E5E5

.item-input form
    margin 0px

.item-input .input-group
    margin 0px

.item-input input.form-control
    border-radius none
    -webkit-border-radius none
    border-width 0px
    border-color none;
    border-style none;
    box-shadow none
    -webkit-box-shadow none