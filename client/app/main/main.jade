    img(src='assets/images/yeoman.png', alt='I\'m Yeoman')
div.row
  div(ng-class="{ 'col-md-6': showDetails, 'col-md-12': !showDetails }")

    div.panel
      div.panel-body
        ul.list-group
          li.list-group-item.item-input(ng-repeat="(index, thing) in awesomeThings", data-ng-mouseenter="showControls = true", data-ng-mouseleave='showControls = false')
            table
              tr
                td.button.bg-primary
                  p {{index}}
                td.button
                  i.fa.fa-user(ng-show="showControls", ng-click="assignThing(thing)")
                td.button
                  i.fa.fa-trash-o(ng-show="showControls", ng-click="deleteThing(thing, index)")
                td
                  input.form-control.things(id="{{index}}" type='text', ng-model="thing.name", data-ng-blur="thing.save()", ng-keyup="keyPress($event, thing, index)", tj:focus)
                td.button(ng-click="openDetails(thing)")
                  i.fa.fa-chevron-right(ng-show="showControls")
          li.list-group-item
            form.thing-form
              p.input-group
                input.form-control(type='text', placeholder='Add a new thing here.', ng-model='newThing')
                span.input-group-btn
                  button.btn.btn-primary(type='submit', ng-click='addThing()') Add New
  div(ng-show="showDetails")
    div.panel
      div.panel-body
        {{details.name}}
